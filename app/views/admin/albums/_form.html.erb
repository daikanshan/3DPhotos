<%= form_for(@admin_album) do |f| %>
  <%= form_errors @admin_album %>

  <div class="form-group">
    <%= f.label "相册名" %><br>
    <%= f.text_field :name ,class:"form-control"%>
  </div>

  <div class="form-group">
  <%= f.label "封面" %>
  <div class="upload-div">
     <%= f.file_field :cover,class:"uploadInput" %>
     <div class="uploadShow">
      <span class="glyphicon glyphicon-plus"></span>
      <i>从本地选择要上传的相片</i>
     </div>
  </div>
  </div>

  <div class="form-group">
    <%= f.label "相册类别" %><br>
    <%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name"),class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label "选择特效" %><br>
    <%= f.select :effect_id, options_from_collection_for_select(@effects, "id", "name"),class:"form-control"%>
  </div>

  <div class="form-group action">
    <%= link_to '取消', admin_albums_path,class:"btn btn-default cancle" %>
    <%= f.submit class:"btn btn-primary submit",id:"submit" %>
  </div>
<% end %>
