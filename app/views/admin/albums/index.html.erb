<p id="notice"><%= notice %></p>

<h1>相册列表</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_albums.each do |admin_album| %>
      <tr>
        <td><%= admin_album.name %></td>
        <td><%= link_to 'Show', admin_album %></td>
        <td><%= link_to 'Edit', edit_admin_album_path(admin_album) %></td>
        <td><%= link_to 'Destroy', admin_album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
