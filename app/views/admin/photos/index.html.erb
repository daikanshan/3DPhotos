
<h1>Listing Admin Photos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Img</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_photos.each do |admin_photo| %>
      <tr>
        <td><%= image_tag(admin_photo.img_url(:thumb)) if admin_photo.img? %>  </td>
        <td><%= admin_photo.album.name if admin_photo.album %></td>
        <td><%= link_to 'Show', admin_photo %></td>
        <td><%= link_to 'Edit', edit_admin_photo_path(admin_photo) %></td>
        <td><%= link_to 'Destroy', admin_photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_admin_photo_path %>
