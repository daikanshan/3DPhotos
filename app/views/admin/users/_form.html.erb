<%= form_for(@admin_user) do |f| %>
  <%= form_errors @admin_user %>
    <div class="form-group">
      <%= f.text_field :name, class:"form-control",placeholder:"请输入用户名" %>
    </div>

    <div class="form-group">
      <!-- <%= image_tag(@admin_user.avatar_url(:thumb)) if @admin_user.avatar? %> -->
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </div>

    <div class="form-group action">
      <%= link_to '取消', admin_users_path,class:"btn btn-default cancle" %>
      <%= f.submit class:"btn btn-primary submit",id:"submit" %>
    </div>
<% end %>
